target (createDemo: '') { if (${demoId} != "") {
  final fp = new File("${hohenheimHome}/docs/samples/${demoId}.pod")
  if (fp.exists()) {
    mkdir (dir: "${appsDir}/demo-${demoId}")
    unzip (src: "${hohenheimHome}/docs/samples/${demoId}.pod",
           dest: "${appsDir}/demo-${demoId}")
  } else {
    println "Cannot locate ${demoId}.pod."
  }
}}

target (createSamples: '') {
  new File("${hohenheimHome}/docs/samples").eachFileMatch FILES, ~/.pod$/ , { f ->
    final pod= f.getName().replaceAll('.pod$',"")
    mkdir (dir: "${appsDir}/demo-${pod}")
    unzip (src: f.getCanonicalPath(), dest: "${appsDir}/demo-${pod}")
  }
}

    <target name="create-app">
