target (cc_j: '') {
  if (${srcJava} == true) {} else {return}
  javac (destdir: "${czDir}", srcdir: "${srcMain}/java",
      includeAntRuntime: false,
      debug: 'on',
      debuglevel: 'lines,vars,source') {
    classpath (refid: 'compileClassPath')
  }
  ant.copy (todir: "${czDir}") {
    fileset (dir: "${srcMain}/java") {
      exclude (name: '**/*.java')
      exclude (name: '**/.svn')
    }
  }
}

target (ct_j: '') {
